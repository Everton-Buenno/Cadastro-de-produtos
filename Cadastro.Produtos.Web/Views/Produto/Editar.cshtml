@model Cadastro.Prod.Web.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Atualizar Produto";
}

<h3 style="padding-top: 50px">@ViewData["Title"] </h3>

<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Editar">

            <input type="hidden" asp-for="ProdutoId" />

            <div class="form-row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <textarea cols="40" rows="5" asp-for="Descricao" class="form-control"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <label asp-for="Valor" class="control-label"></label>
                    <input type="number" asp-for="Valor" class="form-control" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mt-3">
                    <label asp-for="Disponibilidade">Disponivel para venda: </label>
                    <div>
                        <input type="radio" value="1" asp-for="Disponibilidade" checked="@(Model.Disponibilidade == 1)" /> Sim
                        <input type="radio" value="2" asp-for="Disponibilidade" checked="@(Model.Disponibilidade == 2)" /> Não
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Atualizar" class="btn btn-primary" />
                    <a class="btn btn-info" asp-action="Index">Voltar</a>
                </div>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}
